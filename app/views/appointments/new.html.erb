<% if logged_in? %> 
    <% if is_users_appointment?(@appointment) %> 
        <%= render 'errors' %>
        <h1> Book a Coaching Session </h1> 
        <%= form_for(@appointment) do |f| %>
            <%= f.hidden_field :user_id %> 
            <h3> Choose your coach </h3>
            <%= f.collection_select :employee_id, Employee.all, :id, :name %><br><br><br><br> 

            <h3> Choose time </h3> 

            <%= render 'time' %> 

            <div class="field <%= ' field_with_errors' if @appointment.errors[:time].any? %>">
                <%= f.datetime_select :time %> 
            </div>
            <br><br><br><br><br>

            <%= f.submit "Book Session" %> 
        <% end %> 
    <% end %> 
<% end %>