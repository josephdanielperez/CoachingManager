<h1> Log In </h1> 

<%= form_tag('/login') do %>
    <div class="text">
        Email:
        <%= text_field_tag :email %> 
        Password: 
        <%= password_field_tag :password %> 

        <%= submit_tag "Log In" %><br><br><br> 
        or
    </div><br>
    <div class="link">
        <%= link_to "Continue with Facebook", '/auth/facebook' %>
    </div>
<% end %>